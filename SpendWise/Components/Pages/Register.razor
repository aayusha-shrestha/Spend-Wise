@page "/register"
@using SpendWise.Model


<div class="register-body">
    <h1 class="h3 mb-3 fw-normal text-center">Register New User</h1>

    <form class="text-center" @onsubmit="RegisterUser">
    <div class="form-floating">
            <input type="text" class="form-control auth-username" @bind="Users.Username" placeholder="Username" required autofocus />
        <label>Username</label>
    </div>
    <div class="form-floating mt-3">
        <input type="password" class="form-control" @bind="Users.Password" placeholder="Password" required/>
        <label>Password</label>
    </div>
    <!--Currency Select Field-->
    <MudSelect Label="Currency" @bind-Value="Users.Currency" Required="true">
    @foreach (var currency in Enum.GetValues(typeof(Currency)).Cast<Currency>())
    {
        <MudSelectItem Value="@currency">@currency</MudSelectItem>
    }
    </MudSelect>
        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert alert-danger">@Message</div>
        }
    <button class="btn btn-lg btn-primary">
        Register
    </button>
    <button class="btn btn-lg btn-secondary" @onclick="@HandleLogin">
        Login
    </button>
    </form>
</div>


